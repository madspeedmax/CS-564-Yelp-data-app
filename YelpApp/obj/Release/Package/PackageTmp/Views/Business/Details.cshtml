@model YelpApp.Models.Business

@{
    ViewBag.Title = "Details";
}

<div>
    <h3>Business Detail</h3>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Business_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Business_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Business_City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Business_City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Business_State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Business_State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Business_Full_Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Business_Full_Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Business_Open)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Business_Open)
        </dd>

        <dt>
            <label>Categories</label>
        </dt>

        <dd>
            <ul class="list-inline">
                @foreach (var cat in (IEnumerable<YelpApp.Models.Business_Category>)ViewData["Categories"])
                {
                    <li><span class="label label-info">@cat.Category</span></li>
                }
                <li>@Html.ActionLink("+ add", "Create", "Business_Category", new { businessID = Model.Business_ID }, new { @class = "label  label-success" })</li>
            </ul>
        </dd>

        <dt>
            <label>Attributes</label>
        </dt>

        <dd>
            <ul class="list-inline">
                @foreach (var att in (IEnumerable<YelpApp.Models.Business_Attribute>)ViewData["Attributes"])
                {
                    <li><span class="label label-default">@att.Attribute | @att.Value</span></li>
                }
            </ul>
        </dd>

        <dt>
            <label>Check-ins</label>
        </dt>

        <dd>
            <ul class="list-inline">
                @foreach (var chk in (IEnumerable<YelpApp.Models.Business_Checkin>)ViewData["Checkins"])
                {
                    <li><span class="label label-default">Sunday: @chk.Sunday</span></li>
                    <li><span class="label label-default">Monday: @chk.Monday</span></li>
                    <li><span class="label label-default">Tuesday: @chk.Tuesday</span></li>
                    <li><span class="label label-default">Wednesday: @chk.Wednesday</span></li>
                    <li><span class="label label-default">Thursday: @chk.Thursday</span></li>
                    <li><span class="label label-default">Friday: @chk.Friday</span></li>
                    <li><span class="label label-default">Saturday: @chk.Saturday</span></li>
                }
            </ul>
        </dd>

    </dl>
</div>
<div align="center">
    @Html.ActionLink("Edit Details", "Edit", "Business", new { id = Model.Business_ID }, new { @class = "btn btn-primary btn-md" })
</div>
<div>
    @Html.Action("Reviews", new { businessID = Model.Business_ID })
</div>
@if (!string.IsNullOrWhiteSpace(Request.QueryString["BusinessState"]) && !string.IsNullOrWhiteSpace(Request.QueryString["BusinessCity"]) && !string.IsNullOrWhiteSpace(Request.QueryString["BusinessCategory"]))
{
    <p>
        @Html.ActionLink("Back to searching", "Index", "BusinessSearch", new
   {
       Category = Request.QueryString["BusinessCategory"],
       City = Request.QueryString["BusinessCity"],
       State = Request.QueryString["BusinessState"],
       SearchButton = "Search"
   }, null)
    </p>
}

